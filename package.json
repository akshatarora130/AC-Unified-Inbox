{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "prisma-migrate": "bunx prisma migrate dev --schema=packages/database/prisma/schema.prisma",
    "prisma-studio": "bunx prisma studio --schema=packages/database/prisma/schema.prisma",
    "prisma-generate": "bunx prisma generate --schema=packages/database/prisma/schema.prisma",
    "db-push": "bunx prisma db push --schema=packages/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.6.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.23",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
